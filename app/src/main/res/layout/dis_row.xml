<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="10dp">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="10/10/2015"
                android:id="@+id/txtDisDate"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="CP:"
                android:id="@+id/ret_date"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/txtDisDate"
                android:layout_alignStart="@+id/txtDisDate"
                android:textSize="14dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Retrieved"
                android:textStyle="bold"
                android:id="@+id/txtStatus"
                android:gravity="center_vertical"
                android:textColor="#08AE9E"
                android:layout_alignBottom="@+id/ret_EmpID"
                android:layout_toStartOf="@+id/reportQty"
                android:layout_below="@+id/txtCP" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text=": Disbursement #"
                android:id="@+id/ret_id"
                android:layout_alignTop="@+id/txtDisDate"
                android:layout_toEndOf="@+id/txtDisDate"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Dept:"
                android:id="@+id/ret_EmpID"
                android:textSize="14dp"
                android:layout_below="@+id/ret_date"
                android:layout_alignParentStart="true"
                android:layout_marginTop="9dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  >"
                android:textStyle="bold"
                android:id="@+id/reportQty"
                android:gravity="center_vertical"
                android:layout_alignBottom="@+id/ret_EmpID"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/txtStatus" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="1234"
                android:id="@+id/txtDisNo"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/ret_id" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Stationary Store"
                android:id="@+id/txtCP"
                android:textSize="14dp"
                android:layout_alignBaseline="@+id/ret_date"
                android:layout_alignBottom="@+id/ret_date"
                android:layout_toEndOf="@+id/ret_date" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="REGR"
                android:textSize="14dp"
                android:id="@+id/txtDept"
                android:layout_alignTop="@+id/ret_EmpID"
                android:layout_toEndOf="@+id/ret_EmpID" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>