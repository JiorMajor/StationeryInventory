<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="team5.ad.sa40.stationeryinventory.DisListDetailItemList">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/inv_detail_itemID"
        android:layout_margin="15dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:text="Disbursement No:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/inv_detail_itemName"
        android:text="00012"
        android:layout_margin="15dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:layout_toRightOf="@+id/inv_detail_itemID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <View style="@style/Divider"
        android:layout_width="fill_parent"
        android:layout_marginTop="10dp"
        android:layout_height="1dp"
        android:background="@color/background_floating_material_dark"
        android:layout_below="@+id/inv_detail_itemName" />


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Item description                               Quantity"
        android:id="@+id/textView6"
        android:textSize="14sp"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/inv_detail_itemName" />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/ret_detail_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/textView6"
            android:layout_alignEnd="@+id/textView6"
            android:layout_marginTop="10dp" />


</RelativeLayout>
