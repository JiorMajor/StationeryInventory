<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="team5.ad.sa40.stationeryinventory.InventoryDetails"
    android:id="@+id/inv_detail">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="30dp"
        android:src="@android:drawable/star_off"
        android:layout_marginRight="4dp" />

    <TextView
        android:id="@+id/headertext"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:text="E001"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/inv_detail_itemName"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/inv_detail_itemName"
        android:text="Envelope Brown A4"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="15dp"
        android:layout_alignTop="@+id/imageView"
        android:layout_toEndOf="@+id/imageView"
        android:layout_marginTop="10dp"
        android:maxLines="2" />

    <TextView
        android:id="@+id/textViewCategory"
        android:text="Category: "
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inv_detail_itemName"
        android:layout_toEndOf="@+id/imageView"
        android:layout_marginTop="15dp" />

    <TextView
        android:id="@+id/textViewBin"
        android:layout_marginLeft="0dp"
        android:text="Bin#: "
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewCategory"
        android:layout_toEndOf="@+id/imageView"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/inv_detail_category"
        android:text="Envelope"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="15dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textViewCategory"
        android:layout_toEndOf="@+id/textViewCategory" />

    <TextView
        android:id="@+id/inv_detail_bin"
        android:layout_marginLeft="0dp"
        android:text="A7"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textViewBin"
        android:layout_toEndOf="@+id/textViewBin" />

    <TextView
        android:id="@+id/textView3"
        android:layout_marginLeft="0dp"
        android:text="UOM: "
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewBin"
        android:layout_toEndOf="@+id/imageView"
        android:layout_marginTop="3dp" />

    <TextView
        android:id="@+id/inv_detail_uom"
        android:layout_marginLeft="0dp"
        android:text="Box"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView3"
        android:layout_toEndOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView5"
        android:layout_marginLeft="0dp"
        android:text="Status: "
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_toEndOf="@+id/imageView"
        android:layout_marginTop="3dp" />

    <TextView
        android:id="@+id/inv_detail_status"
        android:layout_marginLeft="0dp"
        android:text="Available"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView5"
        android:layout_toEndOf="@+id/textView5"
        android:textColor="#08AE9E"
        android:textStyle="bold" />

    <View style="@style/Divider"
        android:layout_width= "1dp"
        android:layout_height= "55dp"
        android:background="@color/background_floating_material_dark"
        android:layout_alignTop="@+id/textView8"
        android:layout_toEndOf="@+id/imageView"
        android:id="@+id/view4" />

    <View style="@style/Divider"
        android:layout_width= "1dp"
        android:layout_height= "55dp"
        android:background="@color/background_floating_material_dark"
        android:layout_alignTop="@+id/textView10"
        android:layout_alignEnd="@+id/inv_detail_category" />

    <TextView
        android:id="@+id/textView4"
        android:layout_marginLeft="32dp"
        android:text="Available Qty:"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/textView5"
        android:layout_alignStart="@+id/imageView"
        android:layout_marginStart="25dp"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/textView8"
        android:layout_marginLeft="32dp"
        android:text="Reorder Level:"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView4"
        android:layout_toEndOf="@+id/textView4"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/textView10"
        android:layout_marginLeft="32dp"
        android:text="Reorder Qty:"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView8"
        android:layout_toEndOf="@+id/textView8"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/inv_detail_stockQty"
        android:layout_marginLeft="0dp"
        android:text="100"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:gravity="center_horizontal"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/inv_detail_roLvl"
        android:layout_marginLeft="0dp"
        android:text="100"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:layout_below="@+id/textView8"
        android:layout_alignStart="@+id/textView8"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/inv_detail_roQty"
        android:layout_marginLeft="0dp"
        android:text="50"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:layout_below="@+id/textView10"
        android:layout_alignStart="@+id/textView10"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:text="View Stock Card"
        android:id="@+id/stockCardBtn"
        android:layout_below="@+id/view4"
        android:layout_alignStart="@+id/imageView"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="70dp"
        android:textColor="#ffffffff"
        android:background="#08AE9E" />

    <Button
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:text="Report Item"
        android:id="@+id/reportItemBtn"
        android:textColor="#ffffffff"
        android:background="#ff8d45ff"
        android:layout_below="@+id/stockCardBtn"
        android:layout_alignStart="@+id/stockCardBtn"
        android:layout_marginTop="10dp" />

</RelativeLayout>
