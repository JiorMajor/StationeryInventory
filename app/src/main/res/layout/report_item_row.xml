<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/repot_row">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="10dp">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="P040"
                android:id="@+id/inv_itemCode"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/inv_itemName"
                android:layout_marginTop="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Available"
                android:textStyle="bold"
                android:id="@+id/inv_status"
                android:gravity="center_vertical"
                android:textColor="#08AE9E"
                android:layout_alignBottom="@+id/inv_itemName"
                android:layout_toStartOf="@+id/textView"
                android:layout_alignParentTop="true" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Pencil"
                android:id="@+id/inv_itemName"
                android:textSize="14dp"
                android:layout_below="@+id/inv_itemCode"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="50dp"
                android:maxLines="2"
                android:layout_marginBottom="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="  >"
                android:textStyle="bold"
                android:id="@+id/textView"
                android:gravity="center_vertical"
                android:layout_alignBottom="@+id/inv_itemName"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:textSize="24dp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>